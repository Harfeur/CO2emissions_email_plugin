{
  "manifest_version": 2,
  "name": "Estimez votre CO₂",
  "short_name": "Mail CO₂",
  "description": "Estimez votre CO₂ quand vous rédigez un mail",
  "version": "2.0",
  "author": "Maxime Chourré & Mathéo MSA",
  "homepage_url": "https://github.com/Harfeur/CO2emissions_email_plugin",
  "applications": {
    "gecko": {
      "id": "estimate-your-CO2@harfeur.fr",
      "strict_min_version": "74.0"
    }
  },
  "icons": {
    "32": "images/afb-logo.png"
  },
  "permissions": [
    "storage",
    "compose"
  ],
  "compose_action": {
    "default_title": "Estimation CO₂",
    "default_icon" : "images/leaf-icon.png",
    "default_popup": "popup.html"
  }
}