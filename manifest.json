{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "short_name": "__MSG_extensionShortName__",
    "description": "__MSG_extensionDescription__",
    "version": "2.7.5",
    "default_locale": "fr",
    "author": "Maxime Chourr√© & Alexandre Couvez",
    "homepage_url": "https://github.com/Harfeur/CO2emissions_email_plugin",
    "applications": {
        "gecko": {
            "id": "estimate-your-CO2@harfeur.fr",
            "strict_min_version": "78.0"
        }
    },
    "icons": {
        "48": "images/estimate_your_co2_logo_trans_48.png",
        "96": "images/estimate_your_co2_logo_trans_96.png",
        "256": "images/estimate_your_co2_logo_trans_256.png",
        "512": "images/estimate_your_co2_logo_trans_512.png"
    },
    "permissions": [
        "storage",
        "compose",
        "notifications",
        "accountsRead",
        "messagesRead"
    ],
    "compose_action": {
        "default_title": "__MSG_composeActionTitle__",
        "default_icon": "images/leaf-icon.png",
        "default_popup": "compose/popup.html"
    },
    "browser_action": {
        "default_title": "__MSG_browserActionTitle__",
        "default_icon" : "images/co2-icon.png",
        "default_popup": "browser/popup.html"
    },
    "background": {
        "scripts": ["global/background.js"]
    },
    "options_ui": {
        "page": "preferences/preferences.html"
    }
}
